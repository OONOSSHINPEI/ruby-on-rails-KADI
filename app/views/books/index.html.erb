<div class="book-wrap">
    <div class="book-comment"></div>
   
</div>



<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class="books">Title</th>
      <th class="books">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
     
 <tbody>
     <% @books.each do |book| %>
   
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td> 
      <td></td>
      <td>
       <%= link_to "show", "/books/#{book.id}" %>
       <%= link_to "編集", edit_book_path(book.id) %>
       <%= link_to "削除", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>

      </td>
     </tr>
     
   <% end %>
 </tbody>
 
</table>

   
  
  




<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
  
<% end %>




