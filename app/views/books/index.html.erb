<div class="book-wrap">
    <div class="book-comment"></div>
   
</div>



<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class="books">Title</th>
      <th class="books">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
     
 <tbody>
     <% @books.each do |book| %>
   
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td> 
      <td></td>
      <td>
        <%= link_to "Show", "/books/#{book.id}" %>  
        <%= link_to "Edit", edit_book_path(book.id) %>  
        <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

      </td>
     </tr>
     
   <% end %>
 </tbody>
 
  <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

 
</table>

   
  
  




<h1>New Book</h1>
<!-- form_with部分 -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
  
<% end %>




